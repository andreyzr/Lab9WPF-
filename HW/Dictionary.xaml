<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <col:ArrayList x:Key="FontStyles">
        <sys:String>Arial</sys:String>
        <sys:String>Times New Romans</sys:String>
        <sys:String>Verdana</sys:String>
    </col:ArrayList>
    <col:ArrayList x:Key="FontWeights">
        <sys:String>12</sys:String>
        <sys:String>14</sys:String>
        <sys:String>16</sys:String>
    </col:ArrayList>
</ResourceDictionary>