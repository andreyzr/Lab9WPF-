<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="WindowsStyle">
        <Setter Property="Control.Background" Value="Black"/>
    </Style>
    <Style x:Key="TextBlockStyle" BasedOn="{StaticResource WindowsStyle}">
        <Setter Property="TextBlock.Foreground" Value="White"/>
        <Setter Property="TextBlock.Padding" Value="10"/>
    </Style>
    <Style x:Key="TextBlockCenterStyle" BasedOn="{StaticResource TextBlockStyle}">
        <Setter Property="TextBlock.TextAlignment" Value="Center"/>
    </Style>
    <Style x:Key="TextBlockJustifyStyle" BasedOn="{StaticResource TextBlockStyle}">
        <Setter Property="TextBlock.TextAlignment" Value="Justify"/>
    </Style>
    <Style x:Key="ButtonStyle" BasedOn="{StaticResource WindowsStyle}">
        <Setter Property="Button.Foreground" Value="White"/>
        <Setter Property="Button.BorderBrush" Value="White"/>
        <Setter Property="Button.Margin" Value="10"/>
        <Setter Property="Button.Padding" Value="10"/>
    </Style>

</ResourceDictionary>