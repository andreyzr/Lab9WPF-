<Window x:Class="WpfApp5_Topic_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp5_Topic_"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Style="{DynamicResource WindowsStyle}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ComboBox x:Name="styleBox" Grid.Row="0"/>
        <TextBlock Text="Заголовок статьи" Grid.Row="1" Style="{DynamicResource TextBlockCenterStyle}"/>
        <TextBlock Text="Текст статьи" Grid.Row="2" Style="{DynamicResource TextBlockJustifyStyle}"/>
        <UniformGrid Grid.Row="3" Columns="2">
            <Button Content="Назад" Style="{DynamicResource ButtonStyle}"/>
            <Button Content="Вперед" Style="{DynamicResource ButtonStyle}"/>
        </UniformGrid>
    </Grid>
</Window>
